<button type="button" id="create-member-button"><img class="header-image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c4/Water_polo_ball.svg/768px-Water_polo_ball.svg.png" /></button>

<div id="modal-backdrop" class="hidden"></div>
<div id="create-member-modal" class="hidden">
  <div class="modal-dialog">

    <div class="modal-header">
      <h2>New Member</h2>
      <h3>Tell Us a Little Bit About Yourself</h3>
      <button type="button" class="modal-close-button">&times;</button>
    </div>

    <div class="modal-body">
	  <div class="member-input-element">
        <label for="member-name-input">Member Name</label> <!--member attribution-input-->
        <input type="text" id="member-name-input">
      </div>
      <div class="member-input-element">
        <label for="member-about-input">Bio</label> <!--member-text-input-->
        <textarea id="member-about-input"></textarea>
      </div>
	  <div class="member-input-element">
        <label for="member-hobby1-input">Hobby 1</label> <!--member-attribution-input-->
        <input type="text" id="member-hobby1-input">
      </div>
	  <div class="member-input-element">
        <label for="member-hobby2-input">Hobby 2</label> <!--member attribution-input-->
        <input type="text" id="member-hobby2-input">
      </div>
	  <div class="member-input-element">
        <label for="member-hobby3-input">Hobby 3</label> <!--member-attribution-input-->
        <input type="text" id="member-hobby3-input">
      </div>
	  <div class="member-input-element">
        <label for="photo-url-input">Photo URL</label>
        <input type="text" id="photo-url-input">
      </div>

    </div>

    <div class="modal-footer">
      <button type="button" class="modal-cancel-button">Cancel</button>
      <button type="button" class="modal-accept-button">Create Profile</button>
    </div>

  </div>
</div>
